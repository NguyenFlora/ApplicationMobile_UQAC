<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.focusandstudy">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        tools:targetApi="31">
        <activity
            android:name=".controller.TaskActivity"
            android:exported="false" />
        <activity
            android:name=".controller.NewTaskActivity"
            android:exported="false" />
        <activity
            android:name=".controller.FinishedTaskActivity"
            android:exported="false" />
        <activity
            android:name=".controller.FinishedSessionActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SessionActivity"
            android:exported="false" />
        <activity
            android:name=".controller.NewSessionActivity"
            android:exported="false" />
        <activity
            android:name=".controller.CycleExplainationActivity"
            android:exported="false" />

        <activity android:name=".controller.FirstScreenActivity" />
        <activity android:name=".controller.SignUpActivity" />
        <activity android:name=".controller.MainActivity" />
        <activity
            android:name=".controller.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                setRequestedOrientation(ActivityInfo.SCREEN_ORIENTATION_PORTRAIT);
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>