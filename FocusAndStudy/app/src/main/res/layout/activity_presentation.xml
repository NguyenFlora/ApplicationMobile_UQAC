<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_presentation"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/pomodoro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/presentation_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:contentDescription="back"
                    android:src="@drawable/back"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/what_is_the_pomodoro_cycle"
                    android:textAlignment="center"
                    android:textColor="@color/green2"
                    android:textSize="22sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="back"
                android:src="@drawable/transparent"
                android:visibility="visible" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="100dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/description1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description1"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description2"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description3"
                    android:textColor="@color/green2"
                    android:layout_marginTop="20dp"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description4"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description5"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description6"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description7"
                    android:textColor="@color/green2"
                    android:justificationMode="inter_word"
                    android:textSize="17dp"/>

            </LinearLayout>

        </ScrollView>


        <ImageView
            android:id="@+id/discover_the_pomodoro_cycle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/pomodoro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/concentration_image"
            android:visibility="visible" />
        
        
        
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>