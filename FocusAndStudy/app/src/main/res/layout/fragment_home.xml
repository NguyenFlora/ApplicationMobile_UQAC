<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:background="@drawable/background">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Niveau 2"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/music" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/logotexte" />

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="1200 XP"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/orange" />

        </RelativeLayout>

        <TableLayout
            android:id="@+id/hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bar">

            <TableRow>
                <LinearLayout
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/number_of_hours_today_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="6h"
                            android:textSize="24sp"
                            app:drawableStartCompat="@drawable/day" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/de_travail_aujourd_hui"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:orientation="vertical"
                    android:layout_below="@+id/title_bar"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/number_of_hours_per_week_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="13h"
                        android:textSize="24sp"
                        app:drawableStartCompat="@drawable/days" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/semaine"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/start_a_new_session"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/hours"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_a_new_session"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:text="@string/session"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/discover_the_pomodoro_cycle"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:clickable="true"
                android:contentDescription="@string/pomodoro"
                android:src="@drawable/concentration"
                android:visibility="visible" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/pomodoro"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>