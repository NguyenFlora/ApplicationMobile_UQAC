<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/taskdetail_button_retour"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fleche_retour"
        app:backgroundTint="#27893F" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskdetail_button_retour"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskdetail_text_titretache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/tasktitle_taskdetail"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/taskdetail_button_effacer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/trash_icon"
                android:gravity="right"
                app:backgroundTint="#000000" />

            <Button
                android:id="@+id/taskdetail_botton_modifier"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pencil_icon"
                app:backgroundTint="#000000" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_taskdetail_text_typetache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/tasktype_taskdetail"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/taskdetail_text_typetache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Examen"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/taskdetail_image_typetache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/purple_round" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/taskdetail_image_calendrier"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/mini_calendar" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/date"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskdetail_text_nbsessionrealise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/nb_session"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:layout_marginRight="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/taskdetail_text_nbsession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="0"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/taskdetail_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/MyCheckBox"></CheckBox>

            <TextView
                android:id="@+id/taskdetail_text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/task_over"
                android:textColor="#232323"
                android:textFontWeight="500"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/taskdetail_text_descriptiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/description"
            android:textColor="#232323"
            android:textFontWeight="500"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/taskdetail_text_decription"
            android:layout_width="350dp"
            android:layout_height="185dp"
            android:background="@drawable/background_description_taskdetail"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:text="Réviser les cours n° 1, 2 et 3"
            android:textColor="#232323"
            android:textFontWeight="500"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/taskdetail_button_lancersession"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/taskdetail_text_lancersession"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/begin_session_icon"
        app:backgroundTint="#36A556" />

    <TextView
        android:id="@+id/taskdetail_text_lancersession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat"
        android:text="@string/begin_session"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#666666"
        android:textFontWeight="400"
        android:textSize="13dp" />

</RelativeLayout>